{
  "name": "youtube-clips-desktop",
  "version": "1.0.2",
  "description": "Desktop app for creating YouTube clips with subtitles",
  "main": "dist/main/index.js",
  "type": "module",
  "author": "Subscut",
  "license": "MIT",
  "scripts": {
    "postinstall": "node scripts/postinstall.cjs",
    "dev": "vite",
    "build": "vite build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "vite build && electron-builder",
    "dist:mac": "vite build && electron-builder --mac",
    "dist:win": "vite build && electron-builder --win",
    "dist:all": "vite build && electron-builder --mac --win",
    "download-binaries": "node scripts/postinstall.cjs"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "lucide-react": "^0.468.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.subscut.youtube-clips-desktop",
    "productName": "YouTube Clips",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin/${os}",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/fonts",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "arpittiwari24",
      "repo": "youtube-clips-desktop"
    },
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arpittiwari24/youtube-clips-desktop.git"
  }
}
